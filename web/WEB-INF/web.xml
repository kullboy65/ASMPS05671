<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ViewDetailServlet</servlet-name>
        <servlet-class>Servlet.ViewDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Del_emp</servlet-name>
        <servlet-class>Servlet.Del_emp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoteServlet</servlet-name>
        <servlet-class>Servlet.NoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Username</servlet-name>
        <servlet-class>Servlet.Username</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Inhoa</servlet-name>
        <servlet-class>Servlet.Inhoa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchRecord</servlet-name>
        <servlet-class>Servlet.SearchRecord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskPanel</servlet-name>
        <servlet-class>Servlet.TaskPanel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Check</servlet-name>
        <servlet-class>Servlet.Check</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Facebook</servlet-name>
        <servlet-class>Servlet.Facebook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deparment_Servlet</servlet-name>
        <servlet-class>Servlet.Deparment_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeAvatar</servlet-name>
        <servlet-class>Servlet.ChangeAvatar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <!--ckfinder-->
    <servlet>
        <servlet-name>ConnectorServlet</servlet-name>
        <servlet-class>com.ckfinder.connector.ConnectorServlet</servlet-class>
        <init-param>
            <description>
                Path to configuration file can be relative path inside application,
                absolute path on local file system or UNC path.
            </description>
            <param-name>XMLConfig</param-name>
            <param-value>/WEB-INF/config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectorServlet</servlet-name>
        <url-pattern>
            /ckfinder/core/connector/java/connector.java
        </url-pattern>
    </servlet-mapping>
    <!--/ckfinder-->
    <servlet-mapping>
        <servlet-name>ViewDetailServlet</servlet-name>
        <url-pattern>/ViewDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Del_emp</servlet-name>
        <url-pattern>/Del_emp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoteServlet</servlet-name>
        <url-pattern>/NoteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Username</servlet-name>
        <url-pattern>/Username</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Inhoa</servlet-name>
        <url-pattern>/Inhoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchRecord</servlet-name>
        <url-pattern>/SearchRecord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskPanel</servlet-name>
        <url-pattern>/TaskPanel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Check</servlet-name>
        <url-pattern>/Check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Facebook</servlet-name>
        <url-pattern>/Facebook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deparment_Servlet</servlet-name>
        <url-pattern>/Deparment_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeAvatar</servlet-name>
        <url-pattern>/ChangeAvatar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
